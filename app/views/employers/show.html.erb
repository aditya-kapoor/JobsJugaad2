  <div id = "main-container">
    <fieldset>
      <legend>Employer Profile Information</legend>
      <% unless notice.nil? %>
        <div id = "notice"> <%= notice %> </div>
      <% end %>
      <div id="profile-container">
        <div id = "profile_div">
        <h5> Employer Profile Information : </h5>
        <div id = "profile-image">
         <%= image_tag @employer.photo.url(:small) %>
        </div>
        <div id="profile_table">
          <table>
            <tr><td> Name:   </td><td><%= @employer.name %></td></tr>
            <tr><td> Website:</td><td><%= link_to @employer.website, @employer.website %></td></tr>
            <tr><td> Description: </td><td><%= @employer.description %></td></tr> 
          </table>
        </div>
      </div>
    </fieldset>
    <fieldset>
      <legend>Total Jobs Posted by <%= @employer.name.capitalize %></legend>
      <table>
        <tr>
          <th> Job Title </th>
          <th> Description </th>
          <th> Posted On: </th>
        </tr>
        <% @employer.jobs.each do |job| %>
          <tr>
            <td> <%= link_to job.title, job, :target => "_blank" %></td>
            <td> <%= job.description %></td>
            <td> <%= job.created_at.strftime("%d-%m-%Y") %></td>
            <td> <%= link_to "Apply to the job", "" %></td>
          </tr>
        <% end %>
      </table>
    </fieldset> 
  </div>