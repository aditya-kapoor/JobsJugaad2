<%= form_for(@employer, :url => { :controller => "sessions", :action => "register" }) do |f| %>
  <% if @employer.errors.any? %>
    <div class="error_messages">
     <h2><%= pluralize(@employer.errors.count, "error") %> prohibited the details from being saved:</h2>
    </div>
  <% end %>
  <fieldset>
    <legend>Registration</legend>
    <table>
      <tr>
        <td><%= f.label :name %></td>
        <td><%= f.text_field :name %></td>
        <% unless error_present?(:name, @employer) %>
          <td class="error-notice"><%= get_errors(:name, @employer) %></td>
        <% end %>
      </tr>
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.email_field :email %></td>
        <% unless error_present?(:email, @employer) %>
          <td class="error-notice"><%= get_errors(:email, @employer) %></td>
        <% end %>
      </tr>
      <tr>
        <td><%= f.label :password %></td>
        <td><%= f.password_field :password %></td>
        <% unless error_present?(:password, @employer) %>
          <td class="error-notice"><%= get_errors(:password, @employer) %></td>
        <% end %>
        </tr>
      <tr>
        <td><%= f.label :password_confirmation %></td>
        <td><%= f.password_field :password_confirmation %></td>
        <% unless error_present?(:password_confirmation, @employer) %>
          <td class="error-notice"><%= get_errors(:password_confirmation, @employer) %></td>
        <% end %>
        </tr>
      <tr>
        <td><%= f.label :website %></td>
        <td><%= f.url_field :website %></td>
        <% unless error_present?(:website, @employer) %>
          <td class="error-notice"><%= get_errors(:website, @employer) %></td>
        <% end %>
        </tr>
      <tr>
        <td><%= f.label :description %></td>
        <td><%= f.text_area :description, :rows => 10 %></td>
      </tr>
      <tr>
        <td></td>
        <td><p class="button"><%= f.submit %></p></td>
      </tr>
    </table>
    <%= link_to 'Back to Login', elogin_path %>
  </fieldset>
<% end %>